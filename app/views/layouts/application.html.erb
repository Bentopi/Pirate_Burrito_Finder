<!DOCTYPE html>
<html>
<head>
  <title>Burrito Plunderer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path do %>
        <%= image_tag("http://thelaughingplanetcafe.com/images/burrito-special-icon.png", class: "navbar-brand") %>
      <% end %>
    </div>

    <% if @treasuremap && @treasuremap.name %>
      <div class="navbar-text reset-btn">
        <%= link_to "Upload Burrito", new_photo_path, class: "btn btn-success navbar-btn" %>
      </div>
      <% else %>
        <span class="burrito-find navbar-text" >Locate nearby Burritos</span>
    <% end %>

    <div class="navbar-right sign-in">
      <% if @current_user %>
      <div class="navbar-text">
        Signed in as <%= @current_user.email %>
        (<%= link_to "Sign Out", sign_in_path, method: :delete %>)
      </div>
      <% else %>
          <%= link_to "Sign In", sign_in_path, class: "btn btn-primary navbar-btn" %>
      <% end %>
    </div>
    <div class="navbar-text navbar-right reset-btn">
      <%= link_to "Reset Map", reset_map_path, class: "btn btn-danger navbar-btn" %>
    </div>
    <div class="navbar-text navbar-right reset-btn">
      <% if @current_user %>
      <%= link_to "Your Treasure Maps", treasuremaps_path, class: "btn btn-danger navbar-btn" %>
      <% end %>
    </div>
  </div>
</nav>
<div class="container notices">
  <% if notice %>
    <div class="alert alert-info text-center" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger text-center" role="alert">
      <%= alert %>
    </div>
  <% end %>
</div>
<%= yield %>

</body>
</html>
